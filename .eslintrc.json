{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "alfonz"
  ],
  "rules": {
    "space-infix-ops": "warn",
    "react-hooks/rules-of-hooks": "off",
    "max-statements-per-line": ["error", { "max": 1 }],
    "jsx-quotes": ["error", "prefer-double"]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
