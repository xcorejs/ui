{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "paths": {
      "@xcorejs/ui": ["./"],
    }
  },
  "exclude": ["node_modules", "_build_internal"],
  "include": ["src", "stories", "**/*.d.ts", "tests"]
}
